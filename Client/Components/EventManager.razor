@attribute [Authorize]

@if (_fullEvents is not null && _fullEvents.Count > 0)
{

    <MudContainer MaxWidth="MaxWidth.Small" Class="pt-10">
        <MudExpansionPanels>
            @foreach (var hd in @_headerDates.Distinct())
            {
                <MudExpansionPanel HideIcon="true">
                    <TitleContent>
                        <div class="d-flex">
                            <MudText Class="mt-1">@hd.EventDate.ToShortDateString()</MudText>
                            <MudBadge Content="@hd.Count" Color="Color.Primary" Overlap="true" Class="d-flex ml-auto">
                                <MudIcon Icon="@Icons.Material.Filled.SportsVolleyball" Color="Color.Default" />
                            </MudBadge>
                        </div>
                    </TitleContent>
                    <ChildContent>
                        Panel Content
                    </ChildContent>
                </MudExpansionPanel>

            }
        </MudExpansionPanels>
